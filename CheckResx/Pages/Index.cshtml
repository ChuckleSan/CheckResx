@model CheckResx.Pages.IndexModel // Updated to match new namespace
@inject CheckResx.Services.ResxComparisonService ResxComparisonService
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Compare .resx Files";
}

<h1>@ViewData["Title"]</h1>

<form method="post" enctype="multipart/form-data" asp-page-handler="Upload">
    <div class="mb-3">
        <label class="form-label">Upload .resx files</label>
        <input type="file" class="form-control" name="files" multiple accept=".resx" />
    </div>
    <button type="submit" class="btn btn-primary">Compare</button>
</form>

@if (Model.Results != null)
{
    <h2>Comparison Results</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Key</th>
                @foreach (var file in Model.FileNames)
                {
                    <th>@file</th>
                }
                <th>Missing From</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model.Results)
            {
                <tr>
                    <td>@result.Key</td>
                    @foreach (var file in Model.FileNames)
                    {
                        <td>@(result.Values.ContainsKey(file) ? result.Values[file] : "-")</td>
                    }
                    <td>@string.Join(", ", result.MissingFrom)</td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}